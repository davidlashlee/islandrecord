<h1>Listing Albums</h1>
 
<%= link_to 'New Album', new_album_path %> | <%= link_to 'Items', items_path %> | <%= link_to 'Ingredients', ingredients_path %><br><br>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
 
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.album_name %></td>
      <td><%= album.song_name %> </td>
      <td><%= link_to 'Show', album_path(album) %></td>
      <td><%= link_to 'Edit', edit_album_path(album) %></td>
      <td><%= link_to 'Destroy', album_path(album), method: :delete, data: { confirm: 'Sure?' } %></td>
    </tr>
  <% end %>

</table>