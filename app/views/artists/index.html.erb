<h1>Listing Artists</h1>

<%= link_to 'New Artists', new_artists_path %> | <%= link_to 'Albums', albums_path %> | <%= link_to 'Contracts', contracts_path %>| <%= link_to 'Reps', reps_path %> | <%= link_to 'Tours', tours_path %><br><br>


<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Rep ID</th>
    <th colspan="3"></th>
  </tr>
 
  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.first_name %></td>
      <td><%= artist.last_name %> </td>
      <td><%= artist.rep_id %> </td>
      <td><%= link_to 'Show', artist_path(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist_path(artist), method: :delete, data: { confirm: 'Sure?' } %></td>
    </tr>
  <% end %>

</table>